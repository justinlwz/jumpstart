{
  "name": "storybook-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate to help kickstart Design System implementation and skip some of the initial setup.",
  "keywords": [
    "design system",
    "storybook",
    "ui",
    "react"
  ],
  "main": "build/index.js",
  "files": [
    "/build"
  ],
  "scripts": {
    "test": "ava",
    "start": "start-storybook -p 6006",
    "build": "npm run clean && concurrently --names 'commonjs,assets' 'npm run build-commonjs' 'npm run build-assets'",
    "build-assets": "gulp assets",
    "build-commonjs": "babel src --out-dir build --ignore '**/stories','**/test' --source-maps inline",
    "build-storybook": "build-storybook",
    "clean": "gulp clean",
    "release": "np --no-publish"
  },
  "repository": "git+https://justinlwz@github.com/justinlwz/storybook-boilerplate.git",
  "author": "Justin Lim (http://justinlim.xyz/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/justinlwz/storybook-boilerplate/issues"
  },
  "homepage": "https://github.com/justinlwz/storybook-boilerplate#readme",
  "dependencies": {},
  "peerDependencies": {
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "styled-components": "^4.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@storybook/addon-actions": "^4.0.8",
    "@storybook/addon-centered": "^4.0.8",
    "@storybook/addon-links": "^4.0.8",
    "@storybook/addon-options": "^4.0.8",
    "@storybook/addons": "^4.0.8",
    "@storybook/react": "^4.0.8",
    "ava": "1.0.0-rc.2",
    "babel-loader": "^8.0.4",
    "concurrently": "^4.1.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "gulp": "^4.0.0",
    "gulp-svgmin": "^2.1.0",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-test-renderer": "^16.6.3",
    "rimraf": "^2.6.2",
    "styled-components": "^4.1.2"
  },
  "ava": {
    "files": [
      "**/test/**/*.jsx"
    ],
    "require": [
      "@babel/register",
      "./tools/test-setup"
    ],
    "babel": {
      "extensions": [
        "js",
        "jsx"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js, jsx}": [
      "eslint",
      "git add"
    ],
    "ignore": [
      "src/**/*.style.{js, jsx}"
    ]
  }
}
